@{
    ViewData["Title"] = "My Packages";

}
@using Core.Domain
@model List<Package>

<div class="album py-5">
    <div class="container">
        <div class="h2">
            My packages:
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        
            @foreach (var package in @Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <title>Placeholder</title>
                            <rect width="100%" height="100%" fill="#55595c" />
                            <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
                        </svg>

                        <div class="card-body">

                            <div class="d-flex justify-content-between">
                                <div class="d-flex justify-content-start">
                                    <p class="card-text me-2">@package.Name</p>
                                    @if (package.ContainsAlcohol == true)
                                    {
                                        <p class="card-text text-primary me-2 fw-bold">18+</p>
                                    }
                                </div>
                                <div class="d-flex justify-content-end">
                                    <p class="">Pickup Time:@package.PickUpTimeStart.ToString() to @package.PickUpTimeEnd.ToString()</p>
                                </div>

                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <form asp-area="" asp-controller="Package" asp-action="PackageDetails" asp-route-id="@package.Id" method="post">
                                        <input type="submit" class="btn btn-sm btn-outline-secondary" value="View" />
                                    </form>

                                         <form asp-area="" asp-controller="Package" asp-action="UnreservePackage" asp-route-id="@package.Id" method="post">
                                            <input type="submit" class="btn btn-sm btn-outline-secondary" value="Delete" />
                                        </form>

                                </div>
                                <small class="text-muted">Price: €@package.Price</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>